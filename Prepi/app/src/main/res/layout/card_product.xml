<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/card_view"

                                    android:layout_width="178dp"
                                    android:layout_height="300dp"

                                    android:paddingLeft="2dp"
                                    android:paddingRight="2dp"
                                    android:layout_marginTop="2dp"
                                    android:layout_marginBottom="2dp"
                                    card_view:cardCornerRadius="4dp">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" android:id="@+id/relativeLayout">

        <ImageView
                android:id="@+id/product_picture"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:contentDescription="Foto do Produto"
                android:src="@drawable/woman"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
                android:id="@+id/product_name"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="bottom"
                android:textSize="20sp"
                android:gravity="start"
                android:text="Blusa azul"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/product_picture"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/product_price"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"/>

        <TextView
                android:text="R$ 200,00"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:id="@+id/textView"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="14sp"
                
                android:textAllCaps="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/product_name"
                android:layout_marginStart="5dp" app:layout_constraintVertical_bias="0.41000003"/>
        <TextView
                android:id="@+id/product_price"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="start"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="R$ 150,00"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/product_name"
                android:layout_marginBottom="10dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="5dp"/>

    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>