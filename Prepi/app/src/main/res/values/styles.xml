<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="Prepi.Toolbar.Design" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">Apercu Pro</item>
        <item name="android:textColor">#152935</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="Prepi.Text.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">Apercu Pro</item>
        <item name="android:textColor">#243539</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="Prepi.Text.Label" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">Open Sans</item>
        <item name="android:textColor">#262626</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center_vertical</item>

    </style>

    <style name="Prepi.Text.InputText" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">Open Sans</item>
        <item name="android:textColor">#262626</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <!--<item name="android:maxLength">20</item>-->
        <item name="android:gravity">center_vertical</item>
        <item name="android:inputType">textAutoComplete|textAutoCorrect|textLongMessage</item>
        <item name="android:background">#00000000</item>

    </style>

</resources>
